<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/loginbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Booking"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Remaining Days Info -->
        <TextView
            android:id="@+id/daysRemainingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days Remaining: 0"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Start Date Menu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Start Date:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Start Date"
            android:layout_marginBottom="16dp" />

        <!-- End Date Menu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select End Date:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose End Date"
            android:layout_marginBottom="16dp" />

        <!-- Days Booked Info -->
        <TextView
            android:id="@+id/daysBookedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days Booked (excluding weekends): 0"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Confirm Booking Button -->
        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white" />

        <!-- Return to Staff Portal Button -->
        <Button
            android:id="@+id/btnReturnToPortal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Staff Portal"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
