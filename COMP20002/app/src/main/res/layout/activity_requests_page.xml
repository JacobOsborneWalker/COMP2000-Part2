<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title Text -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Requests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Title for Requests -->
    <TextView
        android:id="@+id/requestsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Requests (Accept/Deny)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Dropdown to select the request for Accept/Deny -->
    <Spinner
        android:id="@+id/requestsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="20dp"/>

    <!-- Accept and Deny Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/denyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deny"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"/>
    </LinearLayout>

    <!-- Title for Notifications -->
    <TextView
        android:id="@+id/notificationsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications (Read)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Dropdown to select the notification to Read -->
    <Spinner
        android:id="@+id/notificationsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="20dp"/>

    <!-- TextView to display the selected request -->
    <TextView
        android:id="@+id/selectedRequestTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a request"
        android:textSize="18sp"
        android:paddingBottom="20dp"
        android:gravity="center"/>

    <!-- TextView to display the selected notification -->
    <TextView
        android:id="@+id/selectedNotificationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a notification"
        android:textSize="18sp"
        android:paddingBottom="20dp"
        android:gravity="center"/>

    <!-- Read Button -->
    <Button
        android:id="@+id/readButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read"
        android:layout_marginBottom="20dp"/>

    <!-- Return to Admin Portal Button -->
    <Button
        android:id="@+id/returnToAdminPortalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Admin Portal"/>

    <TextView
        android:id="@+id/textViewRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Holiday Requests will appear here"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>



</LinearLayout>
