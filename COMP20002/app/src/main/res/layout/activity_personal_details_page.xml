<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/PersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name:" />

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FirstName"
            android:text="FirstName" />

        <TextView
            android:id="@+id/LastNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/SecondName"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:hint="LastName"
            android:text="LastName" />

        <EditText
            android:id="@+id/StaffID"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="StaffID"
            android:text="StaffID" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:" />

        <EditText
            android:id="@+id/EmailAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:text="Email.Adress@gmail.com" />

        <TextView
            android:id="@+id/CurrentJobText"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Current Position" />

        <EditText
            android:id="@+id/JobTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Department"
            android:text="Department" />

        <TextView
            android:id="@+id/CurrentsalaryText"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Current Salary" />

        <EditText
            android:id="@+id/JobSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary"
            android:text="Salary" />

        <TextView
            android:id="@+id/StartedText"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Date started:" />

        <EditText
            android:id="@+id/StartDate"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="JoiningDate"
            android:text="Date Started" />
        <TextView
            android:id="@+id/levesText"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Leaves Remaining:" />

        <EditText
            android:id="@+id/Leaves"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:hint="Leave Dates"
            android:text="Leave Days Remaining" />
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes" />

        <Button
            android:id="@+id/Return"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:text="Return" />
    </LinearLayout>

</RelativeLayout>